<%# 科目一覧ページ %>
<div class="container mx-auto p-4 md:p-6 max-w-4xl">
  <div class="bg-white rounded-3xl shadow-md p-6 md:p-8">
    <%# ヘッダー部分 %>
    <div class="mb-6">
      <%= link_to "ホームに戻る", root_path, class: "text-gray-600 hover:text-gray-900 transition-colors mb-4 inline-block" %>
      
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <h1 class="text-2xl font-bold text-gray-800">学習科目一覧</h1>
        
        <%= link_to "新しい科目を追加", new_study_subject_path, class: "px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors text-sm font-medium" %>
      </div>
    </div>
    
    <%# 科目一覧 %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-800 mb-4">アクティブな科目</h2>
      
      <% active_subjects = @study_subjects.reject(&:archived?) %>
      
      <% if active_subjects.present? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% active_subjects.each do |subject| %>
            <%= link_to study_subject_path(subject), class: "block bg-gray-50 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow" do %>
              <div class="flex items-center">
                <div class="w-6 h-6 rounded-full mr-3" style="background-color: <%= subject.color %>;"></div>
                <div>
                  <h3 class="font-medium text-gray-900"><%= subject.name %></h3>
                  <p class="text-sm text-gray-500">
                    セッション数: <%= subject.study_sessions.count %>件
                    <% if subject.study_sessions.exists? %>
                      / 総時間: <%= subject.study_sessions.sum(:duration) / 60 %>時間 <%= subject.study_sessions.sum(:duration) % 60 %>分
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-xl p-6 text-center">
          <p class="text-gray-500 mb-4">まだ科目が登録されていません</p>
          <%= link_to "最初の科目を追加", new_study_subject_path, class: "px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors text-sm font-medium" %>
        </div>
      <% end %>
    </div>
    
    <%# アーカイブされた科目 %>
    <% archived_subjects = @study_subjects.select(&:archived?) %>
    
    <% if archived_subjects.present? %>
      <div>
        <h2 class="text-xl font-bold text-gray-800 mb-4">アーカイブされた科目</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% archived_subjects.each do |subject| %>
            <%= link_to study_subject_path(subject), class: "block bg-gray-50 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow opacity-70" do %>
              <div class="flex items-center">
                <div class="w-6 h-6 rounded-full mr-3" style="background-color: <%= subject.color %>;"></div>
                <div>
                  <h3 class="font-medium text-gray-900"><%= subject.name %> <span class="text-xs text-gray-500">(アーカイブ済)</span></h3>
                  <p class="text-sm text-gray-500">
                    セッション数: <%= subject.study_sessions.count %>件
                    <% if subject.study_sessions.exists? %>
                      / 総時間: <%= subject.study_sessions.sum(:duration) / 60 %>時間 <%= subject.study_sessions.sum(:duration) % 60 %>分
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>