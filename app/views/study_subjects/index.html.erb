<!-- app/views/study_subjects/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">学習科目管理</h1>

  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-8">
    <!-- 新規科目フォーム -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">新しい科目を追加</h2>
      
      <%= form_with(model: @study_subject, local: true) do |form| %>
        <% if @study_subject.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <h3 class="font-bold">エラーが発生しました：</h3>
            <ul class="list-disc pl-5">
              <% @study_subject.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= form.label :name, "科目名", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= form.label :color, "カラー", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.color_field :color, class: "shadow appearance-none border rounded py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="flex items-center justify-between">
          <%= form.submit "登録する", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>

    <!-- 科目一覧 -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">登録済み科目</h2>
      
      <% if @study_subjects.any? %>
        <ul class="divide-y divide-gray-200">
          <% @study_subjects.each do |subject| %>
            <li class="py-4 flex justify-between items-center">
              <div class="flex items-center">
                <div class="w-4 h-4 rounded-full mr-3" style="background-color: <%= subject.color %>;"></div>
                <span class="text-gray-800"><%= subject.name %></span>
              </div>
              <div class="flex space-x-2">
                <%= link_to '編集', edit_study_subject_path(subject), class: "text-blue-600 hover:text-blue-800" %>
                <%= link_to '削除', study_subject_path(subject), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "text-red-600 hover:text-red-800" %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 italic">まだ科目が登録されていません。</p>
      <% end %>
    </div>
  </div>
</div>